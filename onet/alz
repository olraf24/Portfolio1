        function openInfographic() {
            document.getElementById('infographicModal').style.display = 'block';
            document.body.style.overflow = 'hidden';
        }
        
        function closeInfographic() {
            document.getElementById('infographicModal').style.display = 'none';
            document.body.style.overflow = 'auto';
        }
        
        // Zamknij modal po kliknięciu poza zawartością
        window.onclick = function(event) {
            const modal = document.getElementById('infographicModal');
            if (event.target === modal) {
                closeInfographic();
            }
        }
        
        // Zamknij modal po naciśnięciu ESC
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeInfographic();
