    <script>
        function openInfographic() {
            document.getElementById('infographicModal').style.display = 'block';
            document.body.style.overflow = 'hidden';
        }
        
        function closeInfographic() {
            document.getElementById('infographicModal').style.display = 'none';
            document.body.style.overflow = 'auto';
        }
        
        // Zamknij modal po klikniƒôciu poza zawarto≈õciƒÖ
        window.onclick = function(event) {
            const modal = document.getElementById('infographicModal');
            if (event.target === modal) {
                closeInfographic();
            }
        }
        
        // Zamknij modal po naci≈õniƒôciu ESC
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeInfographic();
            }
        });
    </script>

